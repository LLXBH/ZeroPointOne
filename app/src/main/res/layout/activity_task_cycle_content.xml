<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="timeTools"
            type="llxbh.zeropointone.util.TimeUtil" />
        <variable
            name="taskCycle"
            type="llxbh.zeropointone.data.model.TaskCycle" />
        <variable
            name="viewEdit"
            type="Boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Top-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cb_taskState"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:checked="@={taskCycle.state}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\t\t任务完成后，自增几天：" />

            <EditText
                android:id="@+id/et_taskNextDate"
                android:layout_width="wrap_content"
                android:minWidth="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@{String.valueOf(taskCycle.addTimeDay)}"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_taskDateStart"
                android:layout_width="wrap_content"
                android:minWidth="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="开始时间"
                android:text="@{taskCycle.startTimes == 0L ? null : timeTools.timesToString(taskCycle.startTimes)}"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"/>

            <TextView
                android:id="@+id/tv_taskDateEnd"
                android:layout_width="wrap_content"
                android:minWidth="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="结束时间"
                android:text="@{taskCycle.startTimes == 0L ? null : timeTools.timesToString(taskCycle.endTimes)}"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_taskNeedCompleteNum"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:hint="完成几次？"
                android:text="@{String.valueOf(taskCycle.needCompleteNum)}"/>

        </LinearLayout>

        <!--Center-->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_taskTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:gravity="center_vertical"
                    android:text="@={taskCycle.title}"
                    android:hint="准备做什么？"
                    android:textSize="20dp"
                    android:background="#00000000" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="WebViewLayout">

                    <Button
                        android:id="@+id/btn_taskContentChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewEdit ? @string/text_edit : @string/text_view}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <EditText
                        android:id="@+id/et_taskContent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:gravity="top"
                        android:hint="描述"
                        android:minHeight="40dp"
                        android:text="@={taskCycle.content}"
                        android:visibility="@{viewEdit ? View.VISIBLE : View.GONE}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btn_taskContentChange"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <WebView
                        android:id="@+id/wv_taskContent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="@{viewEdit ? View.GONE : View.VISIBLE}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btn_taskContentChange"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_taskCheckList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <!--Bottom-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_taskContentSwitchCheck"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_menu_list" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_taskCheckAdd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_menu_add" />

        </LinearLayout>

    </LinearLayout>
</layout>