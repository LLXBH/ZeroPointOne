<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <llxbh.zeropointone.TaskStateButton
        android:id="@+id/ibtn_taskState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/task_state_incomplete_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_taskTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:lines="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="无标题"
        app:layout_constraintTop_toTopOf="@id/ibtn_taskState"
        app:layout_constraintBottom_toBottomOf="@id/ibtn_taskState"
        app:layout_constraintStart_toEndOf="@id/ibtn_taskState"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_taskDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="time"
        app:layout_constraintTop_toBottomOf="@id/tv_taskTitle"
        app:layout_constraintStart_toStartOf="@id/tv_taskTitle"
        app:layout_constraintEnd_toEndOf="@id/tv_taskTitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>