<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <llxbh.zeropointone.TaskStateButton
        android:id="@+id/ibtn_taskState"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        app:state="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_taskTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_marginEnd="5dp"
        android:hint="标题"
        app:layout_constraintTop_toTopOf="@id/ibtn_taskState"
        app:layout_constraintBottom_toBottomOf="@id/ibtn_taskState"
        app:layout_constraintStart_toEndOf="@id/ibtn_taskState"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_taskDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="time"
        app:layout_constraintTop_toBottomOf="@id/et_taskTitle"
        app:layout_constraintStart_toStartOf="@id/et_taskTitle"
        app:layout_constraintEnd_toEndOf="@id/et_taskTitle" />

    <EditText
        android:id="@+id/et_taskContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="5dp"
        android:hint="内容"
        app:layout_constraintTop_toBottomOf="@id/tv_taskDate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/ibtn_taskState"
        app:layout_constraintEnd_toEndOf="@id/et_taskTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>